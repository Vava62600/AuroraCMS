# App Metadata
VITE_APP_NAME=AuroraCMS
VITE_API_URL=http://localhost:3000/api

# Auth
VITE_AUTH_STRATEGY=jwt
VITE_TOKEN_EXPIRATION=7d

# Theme
VITE_DEFAULT_THEME=default
VITE_THEMES=default,light,dark
# Features
VITE_FEATURES=blog,forum,shop
# API Configuration
VITE_API_VERSION=v1
VITE_API_TIMEOUT=5000
# Localization
VITE_LOCALE=en-US
VITE_SUPPORTED_LOCALES=en-US,fr-FR,es-ES,de-DE
# CORS Configuration
VITE_CORS_ORIGIN=http://localhost:3000
VITE_CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
# Security
VITE_CSRF_PROTECTION=true
VITE_XSS_PROTECTION=true
# Logging
VITE_LOG_LEVEL=info
# Cache Configuration
VITE_CACHE_ENABLED=true
VITE_CACHE_TTL=3600

# Debug mode
VITE_DEBUG=true

# Database Fallback
DB_FALLBACK=sqlite
DB_MIGRATION_ALLOWED=true
